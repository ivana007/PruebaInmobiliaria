@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "CrearPago";
}

<h1>CrearPago</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearPago">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                @* <input asp-for="FechaPago" class="form-control" />*@
                <input type="date" name="FechaPago" asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPago" class="control-label"></label>
                <input asp-for="NumeroPago" value="@ViewData["NumeroPago"]" class="form-control" />
                <span asp-validation-for="NumeroPago" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe"  value="@ViewData["Importe"]" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <input asp-for="IdContrato"  value="@ViewData["IdContrato"]" class="form-control" />
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BuscarContrato">Volver a la lista</a>
</div>

