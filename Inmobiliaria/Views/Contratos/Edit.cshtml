@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FechaAlta" class="control-label"></label>
                <input type="date" value="@Model.FechaAlta.ToString("yyyy-MM-dd")" asp-for="FechaAlta" class="form-control" />
                <span asp-validation-for="FechaAlta" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="FechaBaja" class="control-label"></label>
                <input type="date" value="@Model.FechaBaja.ToString("yyyy-MM-dd")" asp-for="FechaBaja" class="form-control" />
                <span asp-validation-for="FechaBaja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Garante</label>
                <select class="form-control" name="IdGarante">
                    @foreach (var item in (IList<Garante>)ViewBag.Garantes)
                    {
                        @:<option @(item.IdGarante == Model.IdGarante ? "selected" : "") value="@item.IdGarante">@(item.Nombre + " " + item.Apellido)</option>




                    }
                </select>
                <span asp-validation-for="IdGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdInquilino" class="control-label"></label>
                <input asp-for="IdInquilino" class="form-control" />
                <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Inquilino</label>
                <select class="form-control" name="IdInquilino">
                    @foreach (var item in (IList<Inquilino>)ViewBag.Inquilinos)
                    {
                        @:<option @(item.IdInquilino == Model.IdInquilino ? "selected" : "") value="@item.IdInquilino">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdInmueble" class="control-label"></label>
                <input asp-for="IdInmueble" class="form-control" />
                <span asp-validation-for="IdInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Inquilino</label>
                <select class="form-control" name="IdInmueble">
                    @foreach (var item in (IList<Inmueble>)ViewBag.Inmuebles)
                    {
                        @:<option @(item.IdInmueble == Model.IdInmueble ? "selected" : "") value="@item.IdInmueble">@(item.Precio)</option>
                    }
                </select>
                <span asp-validation-for="IdInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">volver a la lista</a>
</div>

